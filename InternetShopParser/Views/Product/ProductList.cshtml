@page
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div data-role="page" class="page" id="ProductAll" data-dom-cache="false">
    <div role="main" class="ui-content addAdvertContent">
        <h1>Products</h1>
        <div id="productTable"></div>
        <div id="pagination_context">
            <div class="pagination_child_btn" id="preview_div" hidden>
                <input type="button" value="<" onclick="productListPage.Preview()" id="preview" />
            </div>
            <div id="count_products" class="pagination_child"></div>
            <div class="pagination_child_btn" id="next_div">
                <input type="button" value=">" onclick="productListPage.Next()" id="next" />
            </div>
        </div>
    </div>
</div>
